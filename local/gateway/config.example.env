# ============================================================
# DoAi-Gateway 환경 변수
# ============================================================
# 사용법: cp config.example.env .env
# 파일: local/gateway/.env

# ───────────────────────────────────────────────────────────
# 서버 설정
# ───────────────────────────────────────────────────────────
PORT=3100

# ───────────────────────────────────────────────────────────
# Vultr 연결 (cloud-gateway)
# ───────────────────────────────────────────────────────────
# Cloud Gateway 연결 활성화
VULTR_ENABLED=true

# Cloud Gateway WebSocket URL
# - 로컬 테스트: ws://localhost:8000/ws/node
# - Vultr 서버: ws://158.247.210.152:8000/ws/node
VULTR_URL=ws://localhost:8000/ws/node

# 이 노드의 고유 ID
NODE_ID=node_local_001

# 노드 인증 시크릿 (Base64 인코딩)
# 생성: echo -n "your_secret" | base64 (Linux/Mac)
# 또는: [Convert]::ToBase64String([Text.Encoding]::UTF8.GetBytes("your_secret")) (PowerShell)
NODE_SECRET=

# ───────────────────────────────────────────────────────────
# Laixi 연결 (Device Control via WebSocket)
# ───────────────────────────────────────────────────────────
# Laixi WebSocket 연결 활성화
# LAIXI.EXE 실행 시 true로 설정
LAIXI_ENABLED=false

# Laixi WebSocket URL (LAIXI.EXE 기본 포트: 22221)
LAIXI_URL=ws://127.0.0.1:22221/

# 명령 타임아웃 (ms)
LAIXI_TIMEOUT=10000

# 하트비트 간격 (ms)
LAIXI_HEARTBEAT_INTERVAL=5000

# ───────────────────────────────────────────────────────────
# ADB 설정
# ───────────────────────────────────────────────────────────
ADB_HOST=127.0.0.1
ADB_PORT=5037

# ───────────────────────────────────────────────────────────
# Mock 모드 (디바이스 없이 테스트)
# ───────────────────────────────────────────────────────────
# 가상 디바이스 사용 (true/false)
MOCK_DEVICES=false

# Mock 모드일 때 가상 디바이스 수
MOCK_DEVICE_COUNT=5

# ───────────────────────────────────────────────────────────
# Supabase (선택)
# ───────────────────────────────────────────────────────────
SUPABASE_URL=
SUPABASE_ANON_KEY=

# ───────────────────────────────────────────────────────────
# 로깅
# ───────────────────────────────────────────────────────────
# 로그 레벨: debug, info, warn, error
LOG_LEVEL=info

