# DoAi-Gateway 환경 설정
# env.example -> .env 로 복사 후 수정

# 서버 설정
PORT=3100
HOST=0.0.0.0

# ADB 설정
ADB_HOST=127.0.0.1
ADB_PORT=5037

# Supabase 설정
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# 모니터링 설정
HEARTBEAT_INTERVAL=30000
HEARTBEAT_TIMEOUT=5000
HEARTBEAT_FAILURE_THRESHOLD=3

# 로깅 설정
LOG_LEVEL=info

# ═══════════════════════════════════════════════════════
# OpenAI 설정 (AI 시민 두뇌)
# ═══════════════════════════════════════════════════════

# OpenAI API 키 (필수)
OPENAI_API_KEY=sk-proj-xxxxx

# OpenAI 프로젝트 ID (선택)
OPENAI_PROJECT_ID=proj_xxxxx

# 계급별 모델 설정
OPENAI_MODEL_ARISTOCRAT=gpt-4o
OPENAI_MODEL_BOURGEOISIE=gpt-4o-mini
OPENAI_MODEL_PROLETARIAT=gpt-3.5-turbo

# Vision API 설정 (시청 증명용)
OPENAI_VISION_MODEL=gpt-4o
OPENAI_VISION_MAX_TOKENS=500
