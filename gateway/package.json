{
  "name": "doai-gateway",
  "version": "2.0.0",
  "description": "DoAi.Me Gateway - 통합 관제 서버 (ADB + Dashboard)",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "dev:client": "cd client && npm run dev",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:client\"",
    "build": "npm run build:client",
    "build:client": "cd client && npm install && npm run build",
    "postinstall": "cd client && npm install",
    "test": "jest",
    "lint": "eslint src/ && cd client && npm run lint"
  },
  "keywords": [
    "doai",
    "adb",
    "android",
    "automation",
    "gateway"
  ],
  "author": "Axon (Tech Lead)",
  "license": "MIT",
  "dependencies": {
    "@devicefarmer/adbkit": "^3.2.6",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "winston": "^3.11.0",
    "uuid": "^9.0.1",
    "ws": "^8.16.0",
    "@supabase/supabase-js": "^2.39.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
