# ============================================================
# DoAi-Gateway 환경 변수
# ============================================================
# 사용법: cp config.example.env .env

# ───────────────────────────────────────────────────────────
# 서버 설정
# ───────────────────────────────────────────────────────────
PORT=3100

# ───────────────────────────────────────────────────────────
# Vultr 연결 (cloud-gateway)
# ───────────────────────────────────────────────────────────
VULTR_ENABLED=true
# VULTR_URL: cloud-gateway WebSocket 엔드포인트
# 예: ws://your-vultr-server.example.com:8000/ws/node
VULTR_URL=ws://YOUR_VULTR_HOST:8000/ws/node
NODE_ID=node_local_001
# NODE_SECRET: Base64 인코딩된 비밀키 (실제 키로 교체 필요)
# 생성: echo -n "your_secret_key" | base64
NODE_SECRET=YOUR_BASE64_ENCODED_SECRET_KEY_HERE

# ───────────────────────────────────────────────────────────
# Supabase (선택)
# ───────────────────────────────────────────────────────────
SUPABASE_URL=
SUPABASE_ANON_KEY=

# ───────────────────────────────────────────────────────────
# ADB 설정
# ───────────────────────────────────────────────────────────
ADB_HOST=127.0.0.1
ADB_PORT=5037

# ───────────────────────────────────────────────────────────
# 로깅
# ───────────────────────────────────────────────────────────
LOG_LEVEL=info

