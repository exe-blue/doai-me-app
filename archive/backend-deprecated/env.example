# ===========================================
# DoAi.Me Backend Environment Variables
# ===========================================
# 이 파일을 .env로 복사 후 실제 값을 입력하세요
# cp env.example .env

# ===========================================
# Supabase Configuration (필수)
# ===========================================
# Supabase Dashboard > Project Settings > API에서 확인

# Supabase 프로젝트 URL
SUPABASE_URL=https://your-project-id.supabase.co

# Supabase Anonymous Key (공개 가능, RLS 적용됨)
SUPABASE_ANON_KEY=your-anon-key-here

# Supabase Service Role Key (비밀 유지 필수! RLS 우회)
# ⚠️ 절대로 프론트엔드에 노출하지 마세요!
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ===========================================
# Database Configuration (선택)
# ===========================================
# PostgreSQL 직접 연결 시 사용
# Supabase Dashboard > Project Settings > Database > Connection String
# [YOUR-PASSWORD]를 실제 비밀번호로 교체하세요
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.your-project-id.supabase.co:5432/postgres

# ===========================================
# Server Configuration
# ===========================================
PORT=8080
HOST=0.0.0.0
ENV=development

# ===========================================
# API Configuration
# ===========================================
API_PREFIX=/api/v1
API_KEY=change-this-in-production

# ===========================================
# Device Management
# ===========================================
# 하트비트 타임아웃 (초) - 이 시간 동안 응답 없으면 offline
DEVICE_HEARTBEAT_TIMEOUT=30
# 최대 동시 작업 수
MAX_CONCURRENT_TASKS=100

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=INFO

